{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "types",
    "removeComments": false,
    "strictNullChecks": false,
    "target": "es2020",
    "types": [
      "node",
      "webpack",
      "webpack-env",
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/types.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "src/**/*.test.js"
  ]
}