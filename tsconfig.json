{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": "./src",
    "checkJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "jsx": "react",
    "moduleResolution": "node",
    "module": "es6",
    "outDir": "types",
    "paths": {
      "@/*": ["./*"]
    },
    "removeComments": false,
    "strictNullChecks": false,
    "target": "es2020",
    "typeRoots": [
      "src/types",
      "node_modules/@types"
    ],
    "types": [
      "node",
      "ramda",
      "webpack"
    ],
  },
  "include": [
    "src/**/*.js",
    "*.js"
  ],
  "exclude": [
    "node_modules",
    "public",
    "src/**/*.test.js",
    "types"
  ]
}